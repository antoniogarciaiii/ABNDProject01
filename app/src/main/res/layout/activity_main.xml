<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/banner" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/IcirrHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OrgName"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/DescriptionHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="333dp" />

            <TextView
                android:id="@+id/DescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/ServicesHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Services Offered"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="333dp" />

            <TextView
                android:id="@+id/ServicesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/ContactHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="333dp" />

            <TextView
                android:id="@+id/MailingAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏢: 228 S. Wabash Ave., Ste. 8, Chicago, IL 60604" />

            <TextView
                android:id="@+id/EmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📧: Contact@icirr.org" />

            <TextView
                android:id="@+id/emailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📱: (312) xxx-xxxx" />

            <TextView
                android:id="@+id/HoursOfOperation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🕐: Monday - Friday: 9 - 5 pm CST" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>